{% extends "base_admin.html.twig" %}

{% block title %}

    Blog Symfony |

    {% if editmode %}    
        Modification du commentaire
    {% else %}        
        Nouveau commentaire
    {% endif %}

{% endblock %}

{% block body %}

    <div class="ajout-article-admin rounded">  

        {% if editmode %}
            <h1 class="text-center my-5">Modification d'un commentaire</h1> 
        {% else %}
            <h1 class="text-center my-5">Ajout d'un nouveau commentaire</h1> 
        {% endif %}

    <div class="col-7 mx-auto">
        {{ form_start(formAdminCom) }}

            {{ form_widget(formAdminCom) }}

                <div class="text-center">
                    <button type="submit" class="btn btn-primary col-3">                
                    {% if editmode %}    
                        Enregistrer
                    {% else %}
                        Envoyer
                    {% endif %}                
                    </button>
                </div>
            {{ form_end(formAdminCom) }}
    </div>  

</div>
    
{% endblock %}
